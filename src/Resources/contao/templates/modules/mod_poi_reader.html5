<?php $this->extend('block_searchable'); ?>

<?php $this->block('content'); ?>

    <div class="title-image">
        <?php if ($this->addImage): ?>
            <?php $this->insert('image', $this->arrData); ?>
        <?php endif; ?>
    </div>

    <div class="main-container">
        <div class="content">
            <h1><?= $this->title ?></h1>
